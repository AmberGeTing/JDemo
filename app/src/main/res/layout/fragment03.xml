<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#ff3360"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="新品"
                android:textSize="23sp"/>

            <ImageView
                android:id="@+id/fenxiang"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/share"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_margin="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                  <TextView
                      android:layout_gravity="center_horizontal"
                      android:id="@+id/xin_left"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"/>
                <TextView
                    android:text="身边的人都在拼"
                    android:id="@+id/xin_center"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/tou1"
                        app:roundAsCircle="true"
                        android:layout_width="40dp"
                        android:layout_height="40dp"/>
                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/tou2"
                        android:layout_marginLeft="-5dp"
                        app:roundAsCircle="true"
                        android:layout_width="40dp"
                        android:layout_height="40dp"/>
                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/tou3"
                        android:layout_marginLeft="-8dp"
                        app:roundAsCircle="true"
                        android:layout_width="40dp"
                        android:layout_height="40dp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/xin_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:text="您要的,都只能理好了"
                    android:id="@+id/xin_right_center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/tou4"
                        app:roundedCornerRadius="15dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp"/>
                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/tou5"
                        android:layout_marginLeft="-8dp"
                        app:roundedCornerRadius="15dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <ImageView
                android:background="@drawable/gz"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:textColor="#ff3360"
                android:textSize="23sp"
                android:text="精选新品"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <!--下面的展示数据界面-->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/xin_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

</ScrollView>